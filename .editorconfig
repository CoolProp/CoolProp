# see editorconfig.org
root = true

# default settings for all file types
[*]
insert_final_newline = true
trim_trailing_whitespace = true

# settings per extension
[*.{cpp,h}]
charset = utf-8
indent_size = 4
indent_style = space

[*.md]
charset = utf-8
trim_trailing_whitespace = false

[*.py]
charset = utf-8
indent_size = 4
indent_style = space
